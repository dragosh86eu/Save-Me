<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_splash">

    <Button
        android:id="@+id/button_location"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:background="@android:drawable/ic_menu_compass" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_location"
        android:layout_below="@+id/button_location"
        android:layout_marginTop="9dp"
        android:text="Get location"
        android:textColor="#fff"
        android:textSize="12dp"
        android:id="@+id/textView5" />

    <TextView
        android:id="@+id/text_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_location"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:text="no data"
        android:textColor="#fff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/infoSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="Send your location details with SMS SaveMe!"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18dp" />

    <ImageButton
        android:id="@+id/btnSendSMS"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_sms3" />

</RelativeLayout>
